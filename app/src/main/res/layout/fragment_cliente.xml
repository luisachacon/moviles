<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="co.com.luifer.cuentas.ClienteFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#602CC670">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bevan"
                android:gravity="center"
                android:text="@string/clientes"
                android:textColor="@color/colorAccent"
                android:textSize="28dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/clientes_lista"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="375dp">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/agregar_cLiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arbutus"
                android:text="@string/agregar_cliente"
                android:textColor="@color/colorAccent"
                android:background="@drawable/redondo"
                android:layout_gravity="center"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
